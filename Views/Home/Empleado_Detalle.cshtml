@model TerminalV1.Models.ViewModels.EmpleadoVM
@{
    ViewData["Title"] = "Empleado_Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Empleado.IdEmpleado == 0)
{
    <h1> Crear Empleadodddd</h1>
}
else
{
    <h1> Editar Empleado cambio prueba</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Empleado_Detalle" asp-controller="Home" method="post">
        <input type="hidden" asp-for="Empleado.IdEmpleado"/>

        <div class="mb-2">
            <label class="form-label" asp-for="Empleado.NombreCompleto">Nombre Completo</label>
            <input class="form-control form-control-sm" asp-for="Empleado.NombreCompleto" type="text"/>
        </div>

        <div class="mb-2">
            <label class="form-label" asp-for="Empleado.Correo">Correo</label>
            <input class="form-control form-control-sm" asp-for="Empleado.Correo" type="text" />
        </div>

        <div class="mb-2">
            <label class="form-label" asp-for="Empleado.Telefono">Telefono</label>
            <input class="form-control form-control-sm" asp-for="Empleado.Telefono" type="text" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="Empleado.CargoId">Cargo</label>
            <select class="form-select form-select-sm" asp-for="Empleado.CargoId" asp-items="@Model.ListaCargo">
                <option selected disabled>---Seleccionar--</option>
            </select>

        </div>
        <div class="mb-2">
            @if (Model.Empleado.IdEmpleado == 0)
            {
                <button class="btn btn-primary btn-sm w-25" type="submit">Confirmar </button>
            }
            else
            {
                <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
            }
            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" >Volver</a>
        </div>

        </form>
    </div>
</div>